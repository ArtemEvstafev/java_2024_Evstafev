pipeline {
    agent any

    triggers {
        githubPush()
    }

    tools {
        maven 'Maven_3.9.9'
        jdk 'JDK_21'
    }

    environment {
        JAVA_HOME = tool 'JDK_21'
        MAVEN_HOME = tool 'Maven_3.9.9'
    }

    stages {
        stage('Checkout Code') {
            steps {
                echo "Clone the repository"
                git branch: 'hmw3_ptp', url: 'https://github.com/ArtemEvstafev/java_2024_Evstafev.git' 
            }
        }

        stage('Build') {
            steps {
                echo "Run Maven build"
                sh 'mvn clean compile'
            }
        }

        stage('Run Tests') {
            steps {
                echo "Run Maven tests"
                sh 'mvn test'
            }
        }
    }

    post {
        always {
            archiveArtifacts artifacts: 'target/*.jar', allowEmptyArchive: true
            junit 'target/surefire-reports/*.xml'
        }
        failure {
            echo 'Build failed!'
        }
        success {
            echo 'Build succeeded!'
        }
    }
}
